  <script>
    document.getElementById("year").textContent = new Date().getFullYear();

    // Demo tracking data (‡¶§‡ßÅ‡¶Æ‡¶ø ‡¶™‡¶∞‡ßá ‡¶ö‡¶æ‡¶á‡¶≤‡ßá ‡¶°‡¶æ‡¶ü‡¶æ‡¶¨‡ßá‡¶ú ‡¶¨‡¶æ ‡¶ó‡ßÅ‡¶ó‡¶≤ ‡¶∂‡¶ø‡¶ü ‡¶Ø‡ßÅ‡¶ï‡ßç‡¶§ ‡¶ï‡¶∞‡¶§‡ßá ‡¶™‡¶æ‡¶∞‡ßã)
    const orders = [
      { id: "ATOZ-101", name: "Rakib Hasan", courier: "Steadfast", status: "Delivered ‚úÖ" },
      { id: "ATOZ-102", name: "Rafi Uddin", courier: "Pathao", status: "On The Way üöö" },
      { id: "ATOZ-103", name: "Jamil", courier: "SA Paribahan", status: "Processing ‚è≥" }
    ];

    function trackOrder() {
      const input = document.getElementById("trackInput").value.trim();
      const resultDiv = document.getElementById("result");

      const found = orders.find(order =>
        order.id.toLowerCase() === input.toLowerCase() ||
        order.name.toLowerCase().includes(input.toLowerCase())
      );

      if (found) {
        resultDiv.innerHTML = `
          <div class="order-box">
            <p><strong>Order ID:</strong> ${found.id}</p>
            <p><strong>Customer:</strong> ${found.name}</p>
            <p><strong>Courier:</strong> ${found.courier}</p>
            <p><strong>Status:</strong> ${found.status}</p>
          </div>
        `;
      } else {
        resultDiv.innerHTML = `<p class="not-found">‚ùå No order found. Please check your ID.</p>`;
      }
    }
  </script>

