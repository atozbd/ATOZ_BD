<script>
function show(id){
  document.querySelectorAll("section").forEach(s=>s.classList.remove("active"));
  document.getElementById(id).classList.add("active");
}

/* CART + CHECKOUT */
function addToCart(name,price){
  let cart=JSON.parse(localStorage.getItem("cart"))||[];
  cart.push({name,price});
  localStorage.setItem("cart",JSON.stringify(cart));
  alert("Added to cart!");
}
document.getElementById("checkoutForm")?.addEventListener("submit",e=>{
  e.preventDefault();
  const order={
    id:Date.now(),
    name:name.value,phone:phone.value,
    district:district.value,area:area.value,address:address.value
  };
  let orders=JSON.parse(localStorage.getItem("orders"))||[];
  orders.push(order);
  localStorage.setItem("orders",JSON.stringify(orders));
  alert("Order placed successfully!");
  show('home');
});

/* LOGIN */
function login(){
  const email=document.getElementById("email").value.trim();
  const pass=document.getElementById("password").value.trim();
  const msg=document.getElementById("msg");
  if(email==="admin@atoz.com"&&pass==="123456"){
    localStorage.setItem("role","admin");loadAdmin();
  }else if(email==="mod@atoz.com"&&pass==="1234"){
    localStorage.setItem("role","moderator");loadAdmin();
  }else msg.textContent="‚ùå Wrong email or password!";
}

/* ADMIN DASHBOARD */
function loadAdmin(){
  const role=localStorage.getItem("role");
  document.getElementById("roleName").textContent=role.toUpperCase();
  show('admin');
  if(role==="moderator"){document.getElementById("manageAdmins").style.display="none";}
  let orders=JSON.parse(localStorage.getItem("orders"))||[];
  document.getElementById("totalOrders").textContent=orders.length;
  document.getElementById("totalCustomers").textContent=new Set(orders.map(o=>o.phone)).size;
  let html="";
  orders.forEach(o=>{
    html+=`<div class="order-box"><b>${o.name}</b> (${o.phone})<br>${o.district}, ${o.area}<br><small>ID:${o.id}</small></div>`;
  });
  document.getElementById("orderList").innerHTML=html;
}
function logout(){
  localStorage.removeItem("role");
  show('login');
}
</script>
